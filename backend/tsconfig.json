{
  "compilerOptions": {
    "paths": {
      "@": ["index.ts"],
    },
    "outDir": "dist",
    "ignoreDeprecations": "5.0",
    // we don't _actually_ have DOM access (esp in tests), but we want to get types for it
    "lib": ["es2015", "dom"],
    "target": "ES2015",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "importsNotUsedAsValues": "error"
  },
}